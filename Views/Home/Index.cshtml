<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/index.css"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Login And Registration</title>
</head>
<body>
    <div id="container">
        @model RegisterViewModel
    <h2>Register</h2>
    <form asp-action="Register" asp-controller="Home" method="POST">
        <span asp-validation-for="first_name" style="color:red"></span> 
        <label asp-for="first_name">First Name: </label> 
        <input class="form-control" type="text" asp-for="first_name">

        <span asp-validation-for="last_name" style="color:red"></span> 
        <label asp-for="last_name">Last Name: </label> 
        <input class="form-control" type="text" asp-for="last_name">

        <span asp-validation-for="email" style="color:red"></span> 
        <label asp-for="email">Email:</label> 
        <input class="form-control" type="text" asp-for="email">

        <span asp-validation-for="password" style="color:red"></span> 
        <label asp-for="password">Password: </label> 
        <input class="form-control" type="password" asp-for="password">

        <span asp-validation-for="confirm" style="color:red"></span> 
        <label asp-for="confirm">Confirm Password: </label> 
        <input class="form-control" type="password" asp-for="confirm">
        <button type="submit">Submit</button>
    </form>
    <h2>Login</h2>
    <form action="/login" method="POST">
        <p style="color:red">@ViewBag.error</p>
        <label for="Email">Email:</label> 
        <input class="form-control" type="text" name="Email">

        <label for="Password">Password: </label> 
        <input class="form-control" type="password" name="Password">
        <button type="submit">Login</button>
    </form>
    </div>
</body>
</html>